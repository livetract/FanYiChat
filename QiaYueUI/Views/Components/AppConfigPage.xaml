<UserControl x:Class="QiaYue.UI.Views.Components.AppConfigPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QiaYue.UI.Views.Components"
             xmlns:bv="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:vm="clr-namespace:QiaYue.UI.ViewModels"
             d:DataContext="{d:DesignInstance Type=vm:ConfigViewModel}" >

    <StackPanel
     HorizontalAlignment="Center"
     VerticalAlignment="Center">
        <TextBlock Text="请输入您的百度翻译api" FontSize="24" HorizontalAlignment="Center" Margin="10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <TextBlock Text="API ID:" FontSize="18" VerticalAlignment="Center" Margin="10" Width="80"/>
            <TextBox Width="400" Height="30" FontSize="16" Margin="10" Text="{Binding BdtApiID}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <TextBlock Text="API Key:" FontSize="18" VerticalAlignment="Center" Margin="10" Width="80"/>
            <TextBox Width="400" Height="30" FontSize="16" Margin="10" Text="{Binding BdtApiKEY}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <TextBlock Text="API URL:" FontSize="18" VerticalAlignment="Center" Margin="10" Width="80"/>
            <TextBox Width="400" Height="30" FontSize="16" Margin="10" Text="{Binding BdtApiUrl}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="修改" Width="50" Height="40" HorizontalAlignment="Center" Margin="10"/>
            <Button Content="确认" Width="150" Height="40" HorizontalAlignment="Center" Margin="10" 
                    Command="{Binding CmdSubmitButton}">
                <bv:Interaction.Triggers>
                    <bv:EventTrigger EventName="Click">
                        <bv:CallMethodAction TargetObject="{ 
                            Binding RelativeSource={
                            RelativeSource AncestorType=Window, AncestorLevel=1}}" 
                                             MethodName="Close"/>
                    </bv:EventTrigger>
                </bv:Interaction.Triggers>
            </Button>
        </StackPanel>
    </StackPanel>
</UserControl>
