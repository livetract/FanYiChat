<Window x:Class="FanYi.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FanYi.UI.Views"
        xmlns:models="clr-namespace:FanYi.UI.Models"
        xmlns:viewmodels="clr-namespace:FanYi.UI.ViewModels"
        xmlns:bv="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="翻译助手百度版" Height="450" Width="800"
        Background="#F5F7FA"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}">

    <!-- 资源定义 -->
    <Window.Resources>
        <!-- 颜色资源 -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#2C6ECB"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#4A90E2"/>
        <SolidColorBrush x:Key="AccentColor" Color="#5CB85C"/>
        <SolidColorBrush x:Key="UserMessageColor" Color="#4A90E2"/>
        <SolidColorBrush x:Key="TranslatedMessageColor" Color="#E5E5EA"/>
        <SolidColorBrush x:Key="TextColor" Color="#333333"/>
        <SolidColorBrush x:Key="LightTextColor" Color="#666666"/>
        <SolidColorBrush x:Key="BorderColor" Color="#DDDDDD"/>

        <!-- 样式资源 -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}"
                                Margin="{TemplateBinding Margin}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource SecondaryColor}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1A56A8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton" 
                                          BorderBrush="{TemplateBinding BorderBrush}"
                                          BorderThickness="{TemplateBinding BorderThickness}"
                                          Background="{TemplateBinding Background}"
                                          Padding="{TemplateBinding Padding}"
                                          IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="20"/>
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter HorizontalAlignment="Left" 
                                                      VerticalAlignment="Center" 
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"/>
                                    <Path Grid.Column="1" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center" 
                                          Data="M 0 0 L 4 4 L 8 0 Z" 
                                          Fill="{StaticResource TextColor}"/>
                                </Grid>
                            </ToggleButton>
                            <Popup x:Name="Popup" 
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True" 
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Grid MaxHeight="200" 
                                      MinWidth="{TemplateBinding ActualWidth}"
                                      Background="White"
                                      >
                                    <ScrollViewer Margin="0" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Cycle"/>
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Focusable="False" 
                                          HorizontalScrollBarVisibility="Hidden" 
                                          VerticalScrollBarVisibility="Auto"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- 消息项样式 -->
        <DataTemplate  DataType="{x:Type models:MessageItem}">
            <Grid Margin="5,3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="10"/>
                </Grid.ColumnDefinitions>

                <!-- 用户消息 -->
                <Border Grid.Column="1"
                        Background="{StaticResource UserMessageColor}"
                        CornerRadius="10,10,3,10"
                        Padding="12,8"
                        MaxWidth="500"
                        HorizontalAlignment="Right">
                    <StackPanel>
                        <TextBlock Text="{Binding OriginalText}" 
                                   Foreground="White" 
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding Timestamp, StringFormat='yyyy-MM-dd HH:mm'}" 
                                   Foreground="#E0E0E0" 
                                   FontSize="11" 
                                   Margin="0,5,0,0"
                                   HorizontalAlignment="Right"/>
                    </StackPanel>
                </Border>

                <!-- 翻译消息 -->
                <Border Grid.Column="0"
                        Background="{StaticResource TranslatedMessageColor}"
                        CornerRadius="10,10,10,3"
                        Padding="12,8"
                        MaxWidth="500"
                        HorizontalAlignment="Left"
                        Margin="0,10,0,0">
                    <StackPanel>
                        <TextBlock Text="{Binding TranslatedText}" 
                                   Foreground="{StaticResource TextColor}" 
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding LanguageInfo}" 
                                   Foreground="{StaticResource LightTextColor}" 
                                   FontSize="11" 
                                   Margin="0,5,0,0"
                                   HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>
            </Grid>
        </DataTemplate>
    </Window.Resources>

    <Grid Margin="15">
        <!-- 标题栏 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <!-- 标题和语言选择 -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" 
                       Text="TranslateChat" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="{StaticResource PrimaryColor}"
                       Margin="0,10,20,10"/>

            <ComboBox Grid.Column="2" 
                      x:Name="comboBoxFromLanguage" 
                      Width="120"
                      Margin="0,10"
                      SelectedValue="{Binding SourceLanguage}"
                      SelectedValuePath="Tag" Cursor="Hand"
                      >
                <ComboBoxItem Tag="zh">中文</ComboBoxItem>
                <ComboBoxItem Tag="en">英语</ComboBoxItem>
                <ComboBoxItem Tag="ja">日语</ComboBoxItem>
                <ComboBoxItem Tag="ko">韩语</ComboBoxItem>
                <ComboBoxItem Tag="fr">法语</ComboBoxItem>
                <ComboBoxItem Tag="de">德语</ComboBoxItem>
                <ComboBoxItem Tag="auto" IsSelected="True">Auto</ComboBoxItem>
            </ComboBox>

            <Button Grid.Column="3" 
                    x:Name="SwapLanguagesBtn" 
                    Width="30" 
                    Height="30"
                    Padding="0"
                    Margin="10,10">
                <Path Data="M19.43 12.98c.04-.32.07-.64.07-.98s-.03-.66-.07-.98l2.11-1.65c.19-.15.24-.42.12-.64l-2-3.46c-.12-.22-.39-.3-.61-.22l-2.49 1c-.52-.4-1.08-.73-1.66-.98l-.38-2.65C14.46 2.18 14.25 2 14 2h-4c-.25 0-.46.18-.49.42l-.38 2.65c-.58.25-1.14.59-1.66.98l-2.49-1c-.22-.08-.49 0-.61.22l-2 3.46c-.12.22-.07.49.12.64l2.11 1.65c-.04.32-.07.64-.07.98s.03.66.07.98l-2.11 1.65c-.19.15-.24.42-.12.64l2 3.46c.12.22.39.3.61.22l2.49-1c.52.4 1.08.73 1.66.98l.38 2.65c.03.24.24.42.49.42h4c.25 0 .46-.18.49-.42l.38-2.65c.58-.25 1.14-.59 1.66-.98l2.49 1c.22.08.49 0 .61-.22l2-3.46c.12-.22.07-.49-.12-.64l-2.11-1.65zm-7.43 2.52c-1.93 0-3.5-1.57-3.5-3.5s1.57-3.5 3.5-3.5 3.5 1.57 3.5 3.5-1.57 3.5-3.5 3.5z" 
                      Fill="White" 
                      Width="16" 
                      Height="16"/>
            </Button>

            <ComboBox Grid.Column="4" 
                      x:Name="comboBoxToLanguage" 
                      Width="120"
                      Margin="0,10"
                      SelectedValue="{Binding DestinationLanguage}"
                      SelectedValuePath="Tag"
                      >
                <ComboBoxItem Tag="zh" IsSelected="True" Content="中文" />
                <ComboBoxItem Tag="en">英语</ComboBoxItem>
                <ComboBoxItem Tag="ja">日语</ComboBoxItem>
                <ComboBoxItem Tag="ko">韩语</ComboBoxItem>
                <ComboBoxItem Tag="fr">法语</ComboBoxItem>
                <ComboBoxItem Tag="de">德语</ComboBoxItem>
                <ComboBoxItem Tag="auto" >Auto</ComboBoxItem>
            </ComboBox>
        </Grid>

        <!-- 消息列表区域 -->
        <Border Grid.Row="2" 
                Background="White" 
                BorderBrush="{StaticResource BorderColor}" 
                BorderThickness="1" 
                CornerRadius="6">
            
            <TextBox x:Name="tbxChatDisplayMessage"
                     Margin="3"
                     Text="{Binding ChatDisplayText}"
                     IsReadOnly="True"
                     IsReadOnlyCaretVisible="False"/>
        </Border>
            
        <!-- 输入区域 -->
        <Grid Grid.Row="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <TextBox Grid.Row="0" 
                     x:Name="tbxInput" 
                     MinHeight="80"
                     Margin="0,5"
                     Text="{Binding ChatInputText}" 
                     >
            </TextBox>
            <StackPanel Grid.Row="1" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right"
                        Margin="0,5,0,0">
                <Button x:Name="ClearButton" 
                        Content="清空" 
                        Background="#F0F0F0" 
                        Foreground="{StaticResource TextColor}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                            <Setter Property="Background" Value="#F0F0F0"/>
                            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E0E0E0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button x:Name="btnTranslate" 
                        Content="发送" 
                        Background="{StaticResource AccentColor}"
                        Command="{Binding CmdSentTranslateMessageButton}" >
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#4CAE4C"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#3D8B3D"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

